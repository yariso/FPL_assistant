# FPL Assistant Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# FPL Credentials (Required for fetching your team data)
# =============================================================================
FPL_EMAIL=your.email@example.com
FPL_PASSWORD=your_fpl_password
FPL_MANAGER_ID=1234567

# =============================================================================
# LLM API Keys (At least one required for AI features)
# =============================================================================
# OpenAI API Key (GPT-4, GPT-3.5)
OPENAI_API_KEY=sk-...

# Anthropic API Key (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# DeepSeek API Key (optional)
DEEPSEEK_API_KEY=sk-...

# =============================================================================
# LLM Configuration
# =============================================================================
# Default model for explanations (options: gpt-4, gpt-4-turbo, claude-3-opus, claude-3-sonnet)
LLM_DEFAULT_MODEL=gpt-4

# Model for simple queries (cheaper option)
LLM_SIMPLE_MODEL=gpt-3.5-turbo

# Enable/disable LLM features (true/false)
LLM_ENABLED=true

# =============================================================================
# Cache Settings
# =============================================================================
# Cache directory (relative to project root)
CACHE_DIR=.cache

# Cache TTL in seconds
CACHE_BOOTSTRAP_TTL=3600
CACHE_FIXTURES_TTL=86400

# =============================================================================
# Optimization Settings
# =============================================================================
# Default planning horizon (gameweeks)
OPTIMIZER_HORIZON=5

# Allow point hits for transfers (true/false)
OPTIMIZER_ALLOW_HITS=true

# Solver time limit in seconds
OPTIMIZER_TIME_LIMIT=60

# =============================================================================
# Application Settings
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Streamlit port
STREAMLIT_PORT=8501
